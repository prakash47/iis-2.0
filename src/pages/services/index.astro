---
import Layout from '../../layouts/Layout.astro';

const title = 'Services';
const description = 'Explore our comprehensive digital services and AI solutions';
---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="hero-gradient-bg"></div>
    <div class="container relative z-10">
      <div class="text-center max-w-3xl mx-auto">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">Our Services</h1>
        <p class="text-xl text-[var(--text-secondary)]">
          Comprehensive digital solutions tailored to accelerate your business growth and innovation
        </p>
      </div>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="section bg-[var(--bg-secondary)]">
    <div class="container">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Web Development -->
        <a href="/services/web-development/" class="service-card">
          <div class="service-card-icon">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm3.5-9c.83 0 1.5-.67 1.5-1.5S16.33 8 15.5 8 14 8.67 14 9.5s.67 1.5 1.5 1.5zm-7 0c.83 0 1.5-.67 1.5-1.5S9.33 8 8.5 8 7 8.67 7 9.5 7.67 11 8.5 11zm3.5 6.5c2.33 0 4.31-1.46 5.11-3.5H6.89c.8 2.04 2.78 3.5 5.11 3.5z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-2">Web Development</h3>
          <p class="text-[var(--text-secondary)] mb-4">High-performance websites and applications built with modern technologies</p>
          <span class="text-[var(--color-cyan)] font-semibold">Learn More →</span>
        </a>

        <!-- Mobile Apps -->
        <a href="/services/mobile-apps/" class="service-card">
          <div class="service-card-icon">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17 2H7c-1.1 0-2 .9-2 2v16c0 1.1.9 2 2 2h10c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zm0 18H7V4h10v16zm-2.5-1h-5c-.83 0-1.5.67-1.5 1.5s.67 1.5 1.5 1.5h5c.83 0 1.5-.67 1.5-1.5s-.67-1.5-1.5-1.5z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-2">Mobile Apps</h3>
          <p class="text-[var(--text-secondary)] mb-4">Native and cross-platform mobile applications for iOS and Android</p>
          <span class="text-[var(--color-cyan)] font-semibold">Learn More →</span>
        </a>

        <!-- AI Workflows -->
        <a href="/services/ai-workflows/" class="service-card">
          <div class="service-card-icon">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-2">AI Workflows</h3>
          <p class="text-[var(--text-secondary)] mb-4">Intelligent automation and agentic AI solutions for business efficiency</p>
          <span class="text-[var(--color-cyan)] font-semibold">Learn More →</span>
        </a>

        <!-- UI/UX Branding -->
        <a href="/services/ui-ux-branding/" class="service-card">
          <div class="service-card-icon">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-2">UI/UX Branding</h3>
          <p class="text-[var(--text-secondary)] mb-4">Beautiful, intuitive designs that elevate your brand and engage users</p>
          <span class="text-[var(--color-cyan)] font-semibold">Learn More →</span>
        </a>

        <!-- Digital Marketing -->
        <a href="/services/digital-marketing/" class="service-card">
          <div class="service-card-icon">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V5h14v14zm-5.04-6.71l-2.75 3.54-2.08-2.71c-.23-.29-.62-.29-.85 0l-2.17 2.84c-.2.24-.2.61 0 .85.24.29.62.29.85 0L8.5 13.5l2.08 2.71c.23.29.62.29.85 0l3.54-4.29c.20-.24.20-.61 0-.85-.24-.29-.62-.29-.85 0z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-2">Digital Marketing</h3>
          <p class="text-[var(--text-secondary)] mb-4">Strategic marketing solutions to grow your online presence and revenue</p>
          <span class="text-[var(--color-cyan)] font-semibold">Learn More →</span>
        </a>

        <!-- Maintenance & Support -->
        <a href="/services/maintenance/" class="service-card">
          <div class="service-card-icon">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 8c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2zm0 2c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm0 6c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-2">Maintenance & Support</h3>
          <p class="text-[var(--text-secondary)] mb-4">Ongoing support and maintenance to keep your systems running smoothly</p>
          <span class="text-[var(--color-cyan)] font-semibold">Learn More →</span>
        </a>

        <!-- Custom Solutions -->
        <a href="/services/custom-solutions/" class="service-card">
          <div class="service-card-icon">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-2">Custom Solutions</h3>
          <p class="text-[var(--text-secondary)] mb-4">Tailored solutions designed specifically for your unique business needs</p>
          <span class="text-[var(--color-cyan)] font-semibold">Learn More →</span>
        </a>
      </div>
    </div>
  </section>

  <!-- Service Process Section -->
  <section class="section">
    <div class="container">
      <h2 class="text-4xl md:text-5xl font-bold text-center mb-16">Our Process</h2>
      
      <div class="grid md:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-[var(--color-cyan)] text-white rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-4">1</div>
          <h3 class="text-xl font-bold mb-2">Discovery</h3>
          <p class="text-[var(--text-secondary)]">We understand your business goals and challenges</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-[var(--color-cyan)] text-white rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-4">2</div>
          <h3 class="text-xl font-bold mb-2">Strategy</h3>
          <p class="text-[var(--text-secondary)]">We develop a comprehensive solution strategy</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-[var(--color-cyan)] text-white rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-4">3</div>
          <h3 class="text-xl font-bold mb-2">Execution</h3>
          <p class="text-[var(--text-secondary)]">We build and deploy your solution with precision</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-[var(--color-cyan)] text-white rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-4">4</div>
          <h3 class="text-xl font-bold mb-2">Support</h3>
          <p class="text-[var(--text-secondary)]">We provide ongoing support and optimization</p>
        </div>
      </div>
    </div>
  </section>
</Layout>
