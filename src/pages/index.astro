---
import Layout from '../layouts/Layout.astro';

const title = 'Home';
const description = 'Intention InfoService - Digital Services & Agentic AI Solutions for Modern Businesses';
---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="hero-gradient-bg"></div>
    <div class="container relative z-10">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div class="animate-slideInLeft">
          <h1 class="text-5xl md:text-6xl font-bold mb-6 leading-tight">
            Transform Your Business with <span class="text-gradient">Intelligent Solutions</span>
          </h1>
          <p class="text-lg text-[var(--text-secondary)] mb-8 leading-relaxed">
            We deliver cutting-edge digital services and Agentic AI workflows that empower businesses to scale, automate, and innovate at unprecedented speed.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="/contact/" class="btn btn-primary">Start Your Project</a>
            <a href="/services/" class="btn btn-outline">Explore Services</a>
          </div>
        </div>
        
        <div class="animate-slideInRight relative">
          <div class="w-full aspect-square bg-gradient-to-br from-[var(--color-cyan-light)] to-[var(--color-cyan)] rounded-2xl opacity-20 absolute inset-0"></div>
          <svg class="w-full h-auto relative z-10" viewBox="0 0 400 400" fill="none" xmlns="http://www.w3.org/2000/svg">
            <circle cx="200" cy="200" r="180" stroke="url(#gradient)" stroke-width="2" opacity="0.3"/>
            <circle cx="200" cy="200" r="140" stroke="url(#gradient)" stroke-width="2" opacity="0.5"/>
            <circle cx="200" cy="200" r="100" stroke="url(#gradient)" stroke-width="2"/>
            <g opacity="0.7">
              <circle cx="200" cy="100" r="8" fill="var(--color-cyan)"/>
              <circle cx="280" cy="150" r="8" fill="var(--color-cyan)"/>
              <circle cx="300" cy="250" r="8" fill="var(--color-cyan)"/>
              <circle cx="200" cy="300" r="8" fill="var(--color-cyan)"/>
              <circle cx="100" cy="250" r="8" fill="var(--color-cyan)"/>
              <circle cx="120" cy="150" r="8" fill="var(--color-cyan)"/>
            </g>
            <defs>
              <linearGradient id="gradient" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" stop-color="var(--color-navy)"/>
                <stop offset="100%" stop-color="var(--color-cyan)"/>
              </linearGradient>
            </defs>
          </svg>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Overview Section -->
  <section class="section bg-[var(--bg-secondary)]">
    <div class="container">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-4">Our Core Services</h2>
        <p class="text-lg text-[var(--text-secondary)] max-w-2xl mx-auto">
          Comprehensive digital solutions designed to accelerate your business growth and innovation
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Web Development -->
        <a href="/services/web-development/" class="service-card">
          <div class="service-card-icon">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm3.5-9c.83 0 1.5-.67 1.5-1.5S16.33 8 15.5 8 14 8.67 14 9.5s.67 1.5 1.5 1.5zm-7 0c.83 0 1.5-.67 1.5-1.5S9.33 8 8.5 8 7 8.67 7 9.5 7.67 11 8.5 11zm3.5 6.5c2.33 0 4.31-1.46 5.11-3.5H6.89c.8 2.04 2.78 3.5 5.11 3.5z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-2">Web Development</h3>
          <p class="text-[var(--text-secondary)]">High-performance websites and applications built with modern technologies</p>
        </a>
        
        <!-- Mobile Apps -->
        <a href="/services/mobile-apps/" class="service-card">
          <div class="service-card-icon">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17 2H7c-1.1 0-2 .9-2 2v16c0 1.1.9 2 2 2h10c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zm0 18H7V4h10v16zm-2.5-1h-5c-.83 0-1.5.67-1.5 1.5s.67 1.5 1.5 1.5h5c.83 0 1.5-.67 1.5-1.5s-.67-1.5-1.5-1.5z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-2">Mobile Apps</h3>
          <p class="text-[var(--text-secondary)]">Native and cross-platform mobile applications for iOS and Android</p>
        </a>
        
        <!-- AI Workflows -->
        <a href="/services/ai-workflows/" class="service-card">
          <div class="service-card-icon">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-2">AI Workflows</h3>
          <p class="text-[var(--text-secondary)]">Intelligent automation and agentic AI solutions for business efficiency</p>
        </a>
        
        <!-- UI/UX Branding -->
        <a href="/services/ui-ux-branding/" class="service-card">
          <div class="service-card-icon">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-2">UI/UX Branding</h3>
          <p class="text-[var(--text-secondary)]">Beautiful, intuitive designs that elevate your brand and engage users</p>
        </a>
        
        <!-- Digital Marketing -->
        <a href="/services/digital-marketing/" class="service-card">
          <div class="service-card-icon">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V5h14v14zm-5.04-6.71l-2.75 3.54-2.08-2.71c-.23-.29-.62-.29-.85 0l-2.17 2.84c-.2.24-.2.61 0 .85.24.29.62.29.85 0L8.5 13.5l2.08 2.71c.23.29.62.29.85 0l3.54-4.29c.20-.24.20-.61 0-.85-.24-.29-.62-.29-.85 0z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-2">Digital Marketing</h3>
          <p class="text-[var(--text-secondary)]">Strategic marketing solutions to grow your online presence and revenue</p>
        </a>
        
        <!-- Maintenance & Support -->
        <a href="/services/maintenance/" class="service-card">
          <div class="service-card-icon">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 8c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2zm0 2c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm0 6c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-2">Maintenance & Support</h3>
          <p class="text-[var(--text-secondary)]">Ongoing support and maintenance to keep your systems running smoothly</p>
        </a>
      </div>
    </div>
  </section>

  <!-- Why Choose Us Section -->
  <section class="section">
    <div class="container">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-4xl md:text-5xl font-bold mb-8">Why Choose Intention InfoService?</h2>
          
          <div class="space-y-6">
            <div class="flex gap-4">
              <div class="flex-shrink-0">
                <div class="flex items-center justify-center h-12 w-12 rounded-lg bg-[var(--color-cyan-lighter)]">
                  <svg class="h-6 w-6 text-[var(--color-navy)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
              </div>
              <div>
                <h3 class="text-xl font-bold mb-2">Expert Team</h3>
                <p class="text-[var(--text-secondary)]">Experienced professionals with deep expertise in digital transformation and AI</p>
              </div>
            </div>
            
            <div class="flex gap-4">
              <div class="flex-shrink-0">
                <div class="flex items-center justify-center h-12 w-12 rounded-lg bg-[var(--color-cyan-lighter)]">
                  <svg class="h-6 w-6 text-[var(--color-navy)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
              </div>
              <div>
                <h3 class="text-xl font-bold mb-2">Proven Results</h3>
                <p class="text-[var(--text-secondary)]">Track record of delivering successful projects that drive measurable business impact</p>
              </div>
            </div>
            
            <div class="flex gap-4">
              <div class="flex-shrink-0">
                <div class="flex items-center justify-center h-12 w-12 rounded-lg bg-[var(--color-cyan-lighter)]">
                  <svg class="h-6 w-6 text-[var(--color-navy)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
              </div>
              <div>
                <h3 class="text-xl font-bold mb-2">Latest Technology</h3>
                <p class="text-[var(--text-secondary)]">Always using cutting-edge tools and frameworks for optimal performance</p>
              </div>
            </div>
            
            <div class="flex gap-4">
              <div class="flex-shrink-0">
                <div class="flex items-center justify-center h-12 w-12 rounded-lg bg-[var(--color-cyan-lighter)]">
                  <svg class="h-6 w-6 text-[var(--color-navy)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
              </div>
              <div>
                <h3 class="text-xl font-bold mb-2">24/7 Support</h3>
                <p class="text-[var(--text-secondary)]">Dedicated support team available round the clock for your peace of mind</p>
              </div>
            </div>
          </div>
        </div>
        
        <div class="relative">
          <div class="w-full aspect-square bg-gradient-to-br from-[var(--color-navy)] to-[var(--color-cyan)] rounded-2xl opacity-10 absolute inset-0"></div>
          <div class="relative z-10 p-8 bg-[var(--bg-secondary)] rounded-2xl border border-[var(--border-color)]">
            <div class="space-y-4">
              <div class="h-4 bg-[var(--color-cyan-lighter)] rounded w-3/4"></div>
              <div class="h-4 bg-[var(--color-cyan-lighter)] rounded w-full"></div>
              <div class="h-4 bg-[var(--color-cyan-lighter)] rounded w-5/6"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section">
    <div class="container">
      <div class="cta-section text-center">
        <h2 class="text-4xl md:text-5xl font-bold mb-4">Ready to Transform Your Business?</h2>
        <p class="text-xl mb-8 opacity-90">Let's discuss how our solutions can help you achieve your goals</p>
        <a href="/contact/" class="inline-block px-8 py-4 bg-white text-[var(--color-navy)] font-bold rounded-lg hover:shadow-lg hover:scale-105 transition-all duration-300">
          Get in Touch Today
        </a>
      </div>
    </div>
  </section>
</Layout>
