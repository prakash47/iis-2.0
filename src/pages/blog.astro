---
import Layout from '../layouts/Layout.astro';

const title = 'Blog';
const description = 'Latest insights, tips, and trends in digital services, AI, and technology';

const schema = {
  "@context": "https://schema.org",
  "@type": "Blog",
  "name": "Intention InfoService Blog"
};

// Sample blog posts - in production, these would come from Sanity.io
const blogPosts = [
  {
    id: 1,
    title: 'The Future of Web Development: Astro and Zero-JS Architecture',
    excerpt: 'Explore how Astro is revolutionizing web development with zero-JS by default and incredible performance.',
    category: 'Web Development',
    date: '2024-01-20',
    readTime: '5 min read',
    slug: 'future-of-web-development'
  },
  {
    id: 2,
    title: 'AI Workflows: Automating Your Business Processes',
    excerpt: 'Learn how agentic AI and automation can transform your business operations and reduce costs.',
    category: 'AI & Automation',
    date: '2024-01-18',
    readTime: '7 min read',
    slug: 'ai-workflows-automation'
  },
  {
    id: 3,
    title: 'Mobile App Development Trends in 2024',
    excerpt: 'Discover the latest trends in mobile app development, from React Native to Flutter and beyond.',
    category: 'Mobile Development',
    date: '2024-01-15',
    readTime: '6 min read',
    slug: 'mobile-trends-2024'
  },
  {
    id: 4,
    title: 'SEO Best Practices for Modern Websites',
    excerpt: 'Master the art of SEO with our comprehensive guide to modern search engine optimization.',
    category: 'SEO & Marketing',
    date: '2024-01-12',
    readTime: '8 min read',
    slug: 'seo-best-practices'
  },
  {
    id: 5,
    title: 'Design Systems: Building Scalable UI Components',
    excerpt: 'Learn how to create and maintain design systems that scale with your organization.',
    category: 'Design',
    date: '2024-01-10',
    readTime: '6 min read',
    slug: 'design-systems'
  },
  {
    id: 6,
    title: 'Achieving 100/100 Lighthouse Scores',
    excerpt: 'A practical guide to optimizing your website for maximum performance and user experience.',
    category: 'Performance',
    date: '2024-01-08',
    readTime: '9 min read',
    slug: 'lighthouse-optimization'
  }
];
---

<Layout title={title} description={description}>
  <script type="application/ld+json" set:html={JSON.stringify(schema)} />

  <!-- Hero Section -->
  <section class="hero-section">
    <div class="hero-gradient-bg"></div>
    <div class="container relative z-10">
      <div class="text-center max-w-3xl mx-auto">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">Blog</h1>
        <p class="text-xl text-[var(--text-secondary)]">
          Insights, tips, and trends in digital services, AI, and technology
        </p>
      </div>
    </div>
  </section>

  <!-- Blog Posts Grid -->
  <section class="section">
    <div class="container">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {blogPosts.map((post) => (
          <a href={`/blog/${post.slug}/`} class="card group">
            <div class="flex items-center justify-between mb-4">
              <span class="inline-block px-3 py-1 bg-[var(--color-cyan-lighter)] text-[var(--color-navy)] rounded-full text-xs font-semibold">
                {post.category}
              </span>
              <span class="text-xs text-[var(--text-tertiary)]">{post.readTime}</span>
            </div>
            
            <h3 class="text-xl font-bold mb-3 group-hover:text-[var(--color-cyan)] transition-colors">
              {post.title}
            </h3>
            
            <p class="text-[var(--text-secondary)] mb-4 line-clamp-2">
              {post.excerpt}
            </p>
            
            <div class="flex items-center justify-between text-sm text-[var(--text-tertiary)]">
              <time datetime={post.date}>
                {new Date(post.date).toLocaleDateString('en-US', { 
                  year: 'numeric', 
                  month: 'short', 
                  day: 'numeric' 
                })}
              </time>
              <span class="text-[var(--color-cyan)] font-semibold">Read ‚Üí</span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Categories Section -->
  <section class="section bg-[var(--bg-secondary)]">
    <div class="container">
      <h2 class="text-4xl md:text-5xl font-bold mb-12 text-center">Browse by Category</h2>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        <a href="/blog/?category=web-development" class="card text-center hover:border-[var(--color-cyan)] transition-colors">
          <div class="text-4xl mb-4">üåê</div>
          <h3 class="font-bold mb-2">Web Development</h3>
          <p class="text-sm text-[var(--text-secondary)]">12 articles</p>
        </a>
        
        <a href="/blog/?category=ai-automation" class="card text-center hover:border-[var(--color-cyan)] transition-colors">
          <div class="text-4xl mb-4">ü§ñ</div>
          <h3 class="font-bold mb-2">AI & Automation</h3>
          <p class="text-sm text-[var(--text-secondary)]">8 articles</p>
        </a>
        
        <a href="/blog/?category=mobile" class="card text-center hover:border-[var(--color-cyan)] transition-colors">
          <div class="text-4xl mb-4">üì±</div>
          <h3 class="font-bold mb-2">Mobile Development</h3>
          <p class="text-sm text-[var(--text-secondary)]">10 articles</p>
        </a>
        
        <a href="/blog/?category=design" class="card text-center hover:border-[var(--color-cyan)] transition-colors">
          <div class="text-4xl mb-4">üé®</div>
          <h3 class="font-bold mb-2">Design & UX</h3>
          <p class="text-sm text-[var(--text-secondary)]">15 articles</p>
        </a>
      </div>
    </div>
  </section>

  <!-- Newsletter Section -->
  <section class="section">
    <div class="container">
      <div class="max-w-2xl mx-auto">
        <div class="card text-center">
          <h2 class="text-3xl font-bold mb-4">Subscribe to Our Newsletter</h2>
          <p class="text-[var(--text-secondary)] mb-8">
            Get the latest insights, tips, and trends delivered to your inbox every week
          </p>
          
          <form class="flex gap-4 flex-col sm:flex-row">
            <input 
              type="email" 
              placeholder="Enter your email" 
              class="flex-1 px-4 py-3 rounded-lg border border-[var(--border-color)] bg-[var(--bg-primary)] text-[var(--text-primary)] focus:outline-none focus:ring-2 focus:ring-[var(--color-cyan)]"
              required
            />
            <button 
              type="submit" 
              class="btn btn-primary whitespace-nowrap"
            >
              Subscribe
            </button>
          </form>
          
          <p class="text-xs text-[var(--text-tertiary)] mt-4">
            We respect your privacy. Unsubscribe at any time.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Services -->
  <section class="section bg-[var(--bg-secondary)]">
    <div class="container">
      <h2 class="text-4xl md:text-5xl font-bold mb-16 text-center">Explore Our Services</h2>
      
      <div class="grid md:grid-cols-3 gap-8">
        <a href="/services/web-development/" class="service-card">
          <h3 class="text-2xl font-bold mb-2">Web Development</h3>
          <p class="text-[var(--text-secondary)]">Learn about our web development services and expertise</p>
        </a>
        
        <a href="/services/ai-workflows/" class="service-card">
          <h3 class="text-2xl font-bold mb-2">AI Workflows</h3>
          <p class="text-[var(--text-secondary)]">Discover how AI can transform your business</p>
        </a>
        
        <a href="/services/digital-marketing/" class="service-card">
          <h3 class="text-2xl font-bold mb-2">Digital Marketing</h3>
          <p class="text-[var(--text-secondary)]">Explore our digital marketing solutions</p>
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section">
    <div class="container">
      <div class="cta-section text-center">
        <h2 class="text-4xl md:text-5xl font-bold mb-4">Ready to Implement These Ideas?</h2>
        <p class="text-xl mb-8 opacity-90">Let's discuss how we can help you apply these insights to your business</p>
        <a href="/contact/" class="inline-block px-8 py-4 bg-white text-[var(--color-navy)] font-bold rounded-lg hover:shadow-lg hover:scale-105 transition-all duration-300">
          Get in Touch
        </a>
      </div>
    </div>
  </section>
</Layout>
