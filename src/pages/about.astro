---
import Layout from '../layouts/Layout.astro';

const title = 'About Us';
const description = 'Learn about Intention InfoService and our mission to transform businesses with technology';

const schema = {
  "@context": "https://schema.org",
  "@type": "AboutPage",
  "name": "About Intention InfoService"
};
---

<Layout title={title} description={description}>
  <script type="application/ld+json" set:html={JSON.stringify(schema)} />

  <!-- Hero Section -->
  <section class="hero-section">
    <div class="hero-gradient-bg"></div>
    <div class="container relative z-10">
      <div class="text-center max-w-3xl mx-auto">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">About Intention InfoService</h1>
        <p class="text-xl text-[var(--text-secondary)]">
          We're a team of passionate technologists, designers, and strategists dedicated to transforming businesses through innovative digital solutions.
        </p>
      </div>
    </div>
  </section>

  <!-- Our Story Section -->
  <section class="section">
    <div class="container">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-4xl md:text-5xl font-bold mb-6">Our Story</h2>
          <p class="text-lg text-[var(--text-secondary)] mb-4">
            Intention InfoService was founded with a simple mission: to help businesses harness the power of technology to achieve their goals. We started as a small team of passionate developers and designers, and today we have grown into a full-service digital agency.
          </p>
          <p class="text-lg text-[var(--text-secondary)] mb-4">
            Over the years, we have worked with startups, SMBs, and enterprises across various industries. Each project has taught us something new, and we have continuously evolved our approach to stay at the forefront of technology.
          </p>
          <p class="text-lg text-[var(--text-secondary)]">
            Today, we're excited about the possibilities that AI and automation bring. We're committed to helping our clients leverage these technologies to transform their businesses and create meaningful impact.
          </p>
        </div>
        <div class="bg-[var(--bg-secondary)] rounded-2xl h-96 flex items-center justify-center border border-[var(--border-color)]">
          <div class="text-center">
            <div class="text-6xl mb-4">üìñ</div>
            <p class="text-[var(--text-secondary)]">Our Journey</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Our Values Section -->
  <section class="section bg-[var(--bg-secondary)]">
    <div class="container">
      <h2 class="text-4xl md:text-5xl font-bold mb-16 text-center">Our Core Values</h2>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="card">
          <div class="text-4xl mb-4">üí°</div>
          <h3 class="text-2xl font-bold mb-2">Innovation</h3>
          <p class="text-[var(--text-secondary)]">We constantly push boundaries and explore new technologies to deliver cutting-edge solutions</p>
        </div>
        
        <div class="card">
          <div class="text-4xl mb-4">ü§ù</div>
          <h3 class="text-2xl font-bold mb-2">Collaboration</h3>
          <p class="text-[var(--text-secondary)]">We work closely with our clients, treating them as partners in the journey to success</p>
        </div>
        
        <div class="card">
          <div class="text-4xl mb-4">‚ú®</div>
          <h3 class="text-2xl font-bold mb-2">Excellence</h3>
          <p class="text-[var(--text-secondary)]">We're committed to delivering the highest quality work in everything we do</p>
        </div>
        
        <div class="card">
          <div class="text-4xl mb-4">üéØ</div>
          <h3 class="text-2xl font-bold mb-2">Results-Driven</h3>
          <p class="text-[var(--text-secondary)]">We focus on delivering measurable results that impact your bottom line</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Team Section -->
  <section class="section">
    <div class="container">
      <h2 class="text-4xl md:text-5xl font-bold mb-16 text-center">Our Team</h2>
      
      <p class="text-center text-lg text-[var(--text-secondary)] max-w-3xl mx-auto mb-12">
